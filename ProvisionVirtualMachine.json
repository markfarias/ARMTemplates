{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "imageRef": {
      "type": "object"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "osDiskSize": {
      "type": "int"
    },
    "dataDisks": {
      "type": "array",
      "defaultValue": []
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "networkInterfaceName": {
      "type": "string"
    },
    "networkInterfaceIpAllocation": {
      "type": "string"
    },
    "networkInterfaceIpAddress": {
      "type": "string",
      "defaultValue": ""
    },
    "subnetName": {
      "type": "string"
    },
    "acceleratedNetworking": {
      "type": "bool"
    },
    "loadBalancerName": {
      "type": "string",
      "defaultValue": ""
    },
    "loadBalancerBackEndName": {
      "type": "string",
      "defaultValue": ""
    },
    "availabilitySetName": {
      "type": "string",
      "defaultValue": ""
    },
    "asgId": {
      "type": "string",
      "defaultValue": ""
    },
    "vmAdminUsername": {
      "type": "securestring",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "vmAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "bootDiagnosticsStorageAccountName": {
      "type": "string"
    },
    "iaasDiagnosticsStorageAccountName": {
      "type": "string"
    },
    "vmExtensionNestedTemplateUri": {
      "type": "string"
    },
    "tagEnvironmentValue": {
      "type": "string"
    }
  },
  "variables": {
    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "lbBackendId": [
      {
        "id": "[if(not(empty(parameters('loadBalancerName'))), concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')), '/backendAddressPools/', parameters('loadBalancerBackEndName')), json('null'))]"
      }
    ],
    "availabilitySetId": {
      "id": "[if(not(empty(parameters('availabilitySetName'))), resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName')), json('null'))]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('networkInterfaceName')]",
      "apiVersion": "2018-01-01",
      "location": "[parameters('location')]",
      "tags": {
        "Environment": "[parameters('tagEnvironmentValue')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "applicationSecurityGroups": [
                {
                  "id": "[if(not(empty(parameters('asgId'))), parameters('asgId'), json('null'))]"
                }
              ],
              "privateIPAllocationMethod": "[parameters('networkInterfaceIpAllocation')]",
              "privateIPAddress": "[if(not(empty(parameters('networkInterfaceIpAddress'))), parameters('networkInterfaceIpAddress'),json('null'))]",
              "primary": true,
              "loadBalancerBackendAddressPools": "[if(not(empty(parameters('loadBalancerName'))), variables('lbBackendId'),json('null'))]"
            }
          }
        ],
        "enableAcceleratedNetworking": "[parameters('acceleratedNetworking')]"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('virtualMachineName')]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "tags": {
        "Environment": "[parameters('tagEnvironmentValue')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
      ],
      "scale": null,
      "properties": {
        "availabilitySet": "[if(not(empty(parameters('availabilitySetName'))), variables('availabilitySetId'), json('null'))]",
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": "[parameters('imageRef')]",
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            },
            "diskSizeGB": "[parameters('osDiskSize')]"
          },
          "dataDisks": "[parameters('dataDisks')]"
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('vmAdminUsername')]",
          "adminPassword": "[parameters('vmAdminPassword')]",
          "windowsConfiguration": {
            "provisionVMAgent": true,
            "enableAutomaticUpdates": true
          },
          "secrets": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https', '://', parameters('bootDiagnosticsStorageAccountName'), '.blob.core.usgovcloudapi.net', '/')]"
          }
        }
      }
    },
    {
      "name": "ApplyBaseVMExtensions",
      "comments": "Applies the base Virtual Machine extensions",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('vmExtensionNestedTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "virtualMachineName": {
            "value": "[parameters('virtualMachineName')]"
          },
          "iaasDiagnosticsStorageAccountName": {
            "value": "[parameters('iaasDiagnosticsStorageAccountName')]"
          },
          "vmAdminUsername": {
            "value": "[parameters('vmAdminUsername')]"
          },
          "vmAdminPassword": {
            "value": "[parameters('vmAdminPassword')]"
          }
        }
      }
    }
  ]
}
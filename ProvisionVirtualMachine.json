{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "imageRef": {
      "type": "object"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "osDiskSize": {
      "type": "int"
    },
    "dataDisks": {
      "type": "array",
      "defaultValue": []
    },
    "baseTemplateUri": {
      "type": "string"
    },
    "networkInterfaces": {
      "type": "array",
      "defaultValue": []
    },
    "networkInterfaceAssignments": {
      "type": "array",
      "defaultValue": []
    },
    "availabilitySetName": {
      "type": "string",
      "defaultValue": ""
    },
    "vmAdminUsername": {
      "type": "securestring",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "vmAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "bootDiagnosticsStorageAccountName": {
      "type": "string"
    },
    "iaasDiagnosticsStorageAccountName": {
      "type": "string"
    },
    "vmExtensionNestedTemplateUri": {
      "type": "string"
    },
    "tagEnvironmentValue": {
      "type": "string"
    }
  },
  "variables": {
    "nestedtemplates": {
      "provisioningNicUrl": "[concat(parameters('baseTemplateUri'), '/ProvisionNic.json')]"
    },
    "availabilitySetId": {
      "id": "[if(not(empty(parameters('availabilitySetName'))), resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName')), json('null'))]"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('virtualMachineName'), '-ProvisionNetworkInterface-', copyIndex())]",
      "comments": "",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
      ],
      "copy": {
        "name": "provisionNicLoop",
        "count": "[length(parameters('networkInterfaces'))]",
        "mode": "Parallel"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedtemplates').provisioningNicUrl]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "networkInterfaceName": {
            "value": "[parameters('networkInterfaces')[copyIndex()].name]"
          },
          "networkIpConfiguration": {
            "value": "[parameters('networkInterfaces')[copyIndex()].ipConfiguration]"
          },
          "acceleratedNetworking": {
            "value": "[parameters('networkInterfaces')[copyIndex()].enableAcceleratedNetworking]"
          },
          "enableIPForwarding": {
            "value": "[parameters('networkInterfaces')[copyIndex()].enableIPForwarding]"
          },
          "tagEnvironmentValue": {
            "value": "[parameters('tagEnvironmentValue')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('virtualMachineName')]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "tags": {
        "Environment": "[parameters('tagEnvironmentValue')]"
      },
      "dependsOn": [
        "provisionNicLoop"
      ],
      "scale": null,
      "properties": {
        "availabilitySet": "[if(not(empty(parameters('availabilitySetName'))), variables('availabilitySetId'), json('null'))]",
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": "[parameters('imageRef')]"
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('vmAdminUsername')]",
          "adminPassword": "[parameters('vmAdminPassword')]",
          "windowsConfiguration": {
            "provisionVMAgent": true,
            "enableAutomaticUpdates": true
          },
          "secrets": []
        },
        "networkProfile": {
          "networkInterfaces": "[parameters('networkInterfaceAssignments')]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https', '://', parameters('bootDiagnosticsStorageAccountName'), '.blob.core.usgovcloudapi.net', '/')]"
          }
        }
      }
    },
    {
      "name": "ApplyBaseVMExtensions",
      "comments": "Applies the base Virtual Machine extensions",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('vmExtensionNestedTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "virtualMachineName": {
            "value": "[parameters('virtualMachineName')]"
          },
          "iaasDiagnosticsStorageAccountName": {
            "value": "[parameters('iaasDiagnosticsStorageAccountName')]"
          },
          "vmAdminUsername": {
            "value": "[parameters('vmAdminUsername')]"
          },
          "vmAdminPassword": {
            "value": "[parameters('vmAdminPassword')]"
          }
        }
      }
    }
  ]
}

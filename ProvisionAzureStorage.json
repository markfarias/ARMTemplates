{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "array"
    },
    "storageAccountType": {
      "type": "array"
    },
    "storageProperties": {
      "type": "array"
    },
    "tagEnvironmentValue": {
      "type": "string"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')[copyIndex()]]",
      "apiVersion": "2019-04-01",
      "location": "[parameters('location')]",
      "copy": {
        "name": "provisionStorageAccountLoop",
        "count": "[length(parameters('storageAccountName'))]",
        "mode": "Parallel"
      },
      "sku": {
        "name": "[parameters('storageAccountType')[copyIndex()]]"
      },
      "kind": "StorageV2",
      "properties": "[parameters('storageProperties')[copyIndex()]]",
      "dependsOn": [],
      "tags": {
        "Environment": "[parameters('tagEnvironmentValue')]"
      }
    }
  ],
  "outputs": {
  }
}
